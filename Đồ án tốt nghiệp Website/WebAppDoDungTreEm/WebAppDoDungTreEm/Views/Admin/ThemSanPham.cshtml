@using WebAppDoDungTreEm.Models;
@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>

<div class="container mt-5">
    <h2 style="text-align: center">THÊM SẢN PHẨM</h2>
    <form action="@Url.Action("XLThemSanPham")" method="post" enctype="multipart/form-data">
        @*<div class="row form-group">

            <label class="col-sm-3"><h4>Mã Sản Phẩm:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="MaSP" required />
            </div>
        </div>*@
        <div class="row form-group">
            <label class="col-sm-3"><h4>Tên sản phẩm:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="TenSP" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Đơn vị tính:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="DonViTinh" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Giá bán:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="number" name="GiaBan" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Giá nhập:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="number" name="GiaNhap" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Hình ảnh:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="file" name="fileupload" />
                <a style="color:red;">@ViewBag.Thongbao</a>
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Mô tả:</h4></label>
            <div class="col-sm-9">
                <textarea name="Mota"></textarea>
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Thuộc loại:</h4></label>
            <select name="MaLoai">
                @foreach (LoaiSanPham item in ViewBag.Loais)
                {
                    <option value="@item.MaLoai">@item.TenLoai</option>
                }
            </select>
        </div>
        <div class="row form-group">
            <div class="offset-sm-5"><button type="submit" class="btn btn-dark"><i class="fas fa-user-plus"></i> Lưu</button></div>
        </div>
    </form>
</div>

