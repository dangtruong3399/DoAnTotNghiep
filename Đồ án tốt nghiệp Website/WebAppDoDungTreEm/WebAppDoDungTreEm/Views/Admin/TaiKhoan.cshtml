@using WebAppDoDungTreEm.Models;
@model List<TaiKhoan>
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>

<h4><b><span><i class="fa fa-user"></i></span>Tài khoản người dùng </b></h4>
<hr /><br /><br />
<a href="@Url.Action("ThemTaiKhoan")" class="btn btn-danger">Thêm mới</a>
<table class="table table-bordered">
    <tr class="thead-light">
        <th>UserName</th>
        <th>Họ tên</th>
        <th>Địa chỉ</th>
        <th>Điện thoại</th>
        <th>Phân quyền</th>
        <th>Sửa</th>
        <th>Xóa</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.HoTen</td>
            <td>@item.DiaChi</td>
            <td>@item.SoDienThoai</td>
            @if (@item.PhanQuyen == 1)
            {
                <td> Admin</td>
            }
            else
            {
                <td> Khách Hàng</td>
            }
            <td>
                <a href="@Url.Action("SuaTaiKhoan","admin",new {usr= item.UserName })"><i class="fas fa-edit fa-2x"></i></a>
            </td>
            <td>
                <a onclick="return Delete()" href="@Url.Action("XoaTaiKhoan","admin",new { usr= item.UserName })"><i class="fas fa-trash fa-2x"></i></a>
            </td>
        </tr>
    }
</table>
<script type="text/javascript">
    function Delete() {
        return confirm('Xóa Tài Khoản này?');
    }
</script>


